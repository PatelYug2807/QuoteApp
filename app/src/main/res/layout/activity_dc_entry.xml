<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MarvelEntry">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ironmanImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    android:baselineAligned="false"
                    app:srcCompat="@drawable/superman1" />

                <Button
                    android:id="@+id/supermanBut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/quote_btn"
                    android:gravity="center_vertical"

                    android:text="  SuperMan"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="40sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/baman"
                    android:layout_width="match_parent"
                    android:layout_height="264dp"
                    android:layout_gravity="center_horizontal"
                    android:baselineAligned="false"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/benalflekbatman" />

                <Button
                    android:id="@+id/batmanBut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/quote_btn"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"

                    android:text="Batman"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="38sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thorImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/wonderwoman" />

                <Button
                    android:id="@+id/wonderWomanBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quote_btn"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"

                    android:text="WonderWoman"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="38sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aq"
                    android:layout_width="match_parent"
                    android:layout_height="264dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    android:baselineAligned="false"
                    app:srcCompat="@drawable/aquman" />

                <Button
                    android:id="@+id/aquamanBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quote_btn"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:text=" Aquaman"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="40sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nam"
                    android:layout_width="match_parent"
                    android:layout_height="264dp"
                    android:scaleType="centerCrop"
                    android:baselineAligned="false"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/flash" />

                <Button
                    android:id="@+id/flashBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quote_btn"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:text="  Flash"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="40sp" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>