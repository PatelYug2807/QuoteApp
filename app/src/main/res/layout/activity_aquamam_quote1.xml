<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:srcCompat="@drawable/aquman" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/aquamanName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/quote_btn"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:layout_marginTop="5dp"
            android:text="  Aquaman"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/truthquote"
            android:fontFamily="monospace"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/aquamanShare1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="serif-monospace"
            android:paddingTop="25dp"
            android:text="@string/aquaman1"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/aquamanShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/alaggreen"
            android:paddingLeft="10dp"
            android:text="Share"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>


</LinearLayout>
