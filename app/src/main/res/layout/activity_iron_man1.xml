<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/imageView3"
               android:layout_width="match_parent"
               android:layout_height="234dp"
               android:paddingTop="2dp"
               android:paddingBottom="2dp"
               android:scaleType="centerCrop"
               app:srcCompat="@drawable/ironmanimg" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:paddingLeft="20dp"
               android:paddingTop="10dp"
               android:paddingRight="20dp"
               android:orientation="vertical">


               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/quote_btn"
                   android:gravity="center_vertical"
                   android:paddingTop="2dp"
                   android:layout_marginTop="5dp"
                   android:text="  IronMan"
                   android:textColor="@color/black"
                   android:fontFamily="serif"
                   android:textSize="40sp" />

               <TextView
                   android:id="@+id/textView3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/orange"
                   android:layout_marginTop="25dp"
                   android:gravity="center"
                   android:text="@string/truthquote"
                   android:fontFamily="monospace"
                   android:textSize="25sp"/>

               <TextView
                   android:id="@+id/ironmanshare1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"

                   android:fontFamily="serif-monospace"
                   android:paddingTop="25dp"
                   android:text="@string/ironman1"
                   android:textColor="@color/white"
                   android:textSize="30sp" />

               <Button
                   android:id="@+id/ironmanshare"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="40dp"
                   android:background="@drawable/alaggreen"
                   android:paddingLeft="10dp"
                   android:text="Share"
                   android:textColor="@color/white"
                   android:textSize="25sp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="20dp"
                   android:orientation="horizontal">

                   <Button
                       android:id="@+id/previosIm1"
                       android:layout_marginTop="25dp"
                       android:layout_marginBottom="10dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="20dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="2"
                       android:text="Previous"
                       android:textStyle="bold"
                       android:textSize="18dp"/>

                   <Button
                       android:id="@+id/nextIm1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="2"
                       android:layout_marginTop="25dp"
                       android:layout_marginBottom="10dp"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="5dp"
                       android:text="Next"
                       android:textSize="18dp"
                       android:textStyle="bold"/>
               </LinearLayout>

           </LinearLayout>

       </LinearLayout>
   </ScrollView>
</LinearLayout>
