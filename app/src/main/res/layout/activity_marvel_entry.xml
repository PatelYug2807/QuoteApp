<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MarvelEntry">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ironmanImg"
                    android:layout_width="430dp"
                    android:layout_height="250dp"

                    android:layout_gravity="center_horizontal"
                    android:baselineAligned="false"
                    app:srcCompat="@drawable/ironmanimg" />

                <Button
                    android:id="@+id/ironmanBut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/quote_btn"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="  IronMan"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="40sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/captianimage"
                    android:layout_width="436dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:baselineAligned="false"
                    app:srcCompat="@drawable/captian" />

                <Button
                    android:id="@+id/captianname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/quote_btn"
                    android:gravity="center_vertical"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="CaptianAmerica"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="38sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thorImg"
                    android:layout_width="400dp"
                    android:layout_height="250dp"

                    android:baselineAligned="false"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/thor" />

                <Button
                    android:id="@+id/thorBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quote_btn"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="  Thor"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="40sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hulkimg"
                    android:layout_width="400dp"
                    android:layout_height="250dp"

                    android:baselineAligned="false"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/hulk" />

                <Button
                    android:id="@+id/hulkbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quote_btn"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="  Hulk"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="40sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nam"
                    android:layout_width="400dp"
                    android:layout_height="250dp"

                    android:baselineAligned="false"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/quotenamor1" />

                <Button
                    android:id="@+id/namorbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quote_btn"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="  Namor"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="40sp" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>